<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/native_ad_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.nativetemplates.TemplateView
        android:id="@+id/my_templatesmall"
        app:gnt_template_type="@layout/gnt_small_template_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.nativetemplates.TemplateView
        android:id="@+id/my_templatemedium"
        app:gnt_template_type="@layout/gnt_medium_template_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <com.google.nativetemplates.TemplateView
        android:id="@+id/my_templatecustom"
        app:gnt_template_type="@layout/gnt_custom_small_template_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/admob_ad_loader_layout"
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:layout_margin="1dp"
        android:gravity="center"
        android:background="@color/gnt_gray"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:text="Loading ADS"
            android:textColor="#000000"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>