<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    tools:ignore="MissingConstraints,RtlHardcoded,VectorDrawableCompat">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/stickerItemPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sticker_error"
        app:failureImage="@drawable/sticker_error"
        app:layout_constraintDimensionRatio="1:1"
        app:placeholderImage="@drawable/sticker_error"
        app:retryImage="@drawable/sticker_error"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

